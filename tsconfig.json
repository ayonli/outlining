{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "newLine": "LF",
        "experimentalDecorators": true,
        "sourceMap": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "files": [
        "src/index.ts",
    ],
    "exclude": [
        "node_modules/*"
    ]
}